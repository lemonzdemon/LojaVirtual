@using System.Security.Claims;
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bia Braga Administrativo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="~/house_hearth.ico">
</head>
<body>
    <header>
        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bia Braga Administrativo </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item  dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Produtos
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item"
                                       asp-controller="Products" 
                                       asp-action="Index"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       title="Gerenciamento sobre os produtos">Principal</a>
                                    <a class="dropdown-item"
                                       asp-controller="Categories" 
                                       asp-action="Index"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       title="Gerenciamento sobre as categorias dos produtos">Categorias</a>
                                    <a class="dropdown-item" 
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       href="#"
                                       title="Gerenciamento sobre os produtos destaques">Destaques</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       href="#"
                                       title="Relatório geral sobre os produtos mais vistos, vendidos e curtidos">Relatório</a>
                                </div>
                            </li>

                        </ul>
                    </div>
                    <a class="btn btn-light text-dark login-btn mt-1" asp-area="" asp-controller="Users" asp-action="Logout">
                    Sair &nbsp;
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-box-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                            <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                        </svg>
                    </a>
                </div>
            </nav>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row text-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-12">
                        <span>Usuario ativo: @User.Identity.Name - @User.FindFirstValue(ClaimTypes.Role)</span>
                    </div>
                }
                <div class="col">
                    &copy; @DateTime.Now.Year - Bia Braga Administrativo  - <a asp-area="https://www.facebook.com.br/biabragacosmetics/" target="_blank" asp-controller="Home" asp-action="Privacy">Bia Braga Cosmetics & SexShop</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

