@model BiaBraga.Domain.Models.Entitys.User

@{
    ViewData["Title"] = "Alterar usuario";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row align-content-center justify-content-center">
    <div class="jumbotron col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" disabled class="form-control" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Nome completo do usuario" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Nick" class="control-label"></label>
                    <input asp-for="Nick" class="form-control" placeholder="Apelido do usuario" />
                    <span asp-validation-for="Nick" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="AboutMe" class="control-label"></label>
                    <textarea asp-for="AboutMe" class="form-control" placeholder="Sobre mim do usuario"></textarea>
                    <span asp-validation-for="AboutMe" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="GenerId" class="control-label"></label>
                    <select asp-for="GenerId" class="form-control" asp-items="ViewBag.GenerId"></select>
                    <span asp-validation-for="GenerId" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Birth" class="control-label"></label>
                    <input asp-for="Birth" class="form-control" />
                    <span asp-validation-for="Birth" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Senha de acesso"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar senha de acesso"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Telephone" class="control-label"></label>
                    <input asp-for="Telephone" class="form-control" placeholder="Telefone fixo do usuario"/>
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="CellPhone" class="control-label"></label>
                    <input asp-for="CellPhone" class="form-control" placeholder="Telefone celular do usuario"/>
                    <span asp-validation-for="CellPhone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Role" class="control-label"></label>
                    <select asp-for="Role" asp-items="Html.GetEnumSelectList<BiaBraga.Domain.Enums.Role>()" class="form-control"></select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="CPF" class="control-label"></label>
                    <input id="cpf" asp-for="CPF" class="form-control" placeholder="CPF ou CNPJ do usuario" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="Email" class="control-label"></label>
                    <input id="email" asp-for="Email" class="form-control" placeholder="Email do usuario" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ReceiveCellPhoneMessage" /> @Html.DisplayNameFor(model => model.ReceiveCellPhoneMessage)
                </label>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ReceiveEmailMessage" /> @Html.DisplayNameFor(model => model.ReceiveEmailMessage)
                </label>
            </div>



            <div class="btn-group w-100">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info m-2 font-weight-bold">
                    VOLTAR &nbsp;
                    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-arrow-left-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z" />
                    </svg>
                </a>
                <button type="submit" class="btn btn-success m-2 font-weight-bold">
                    GRAVAR &nbsp;
                    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-check2-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M15.354 2.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3-3a.5.5 0 1 1 .708-.708L8 9.293l6.646-6.647a.5.5 0 0 1 .708 0z" />
                        <path fill-rule="evenodd" d="M1.5 13A1.5 1.5 0 0 0 3 14.5h10a1.5 1.5 0 0 0 1.5-1.5V8a.5.5 0 0 0-1 0v5a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5V3a.5.5 0 0 1 .5-.5h8a.5.5 0 0 0 0-1H3A1.5 1.5 0 0 0 1.5 3v10z" />
                    </svg>
                </button>
            </div>
        </form>
    </div>
</div>

<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-mask-plugin/dist/jquery.mask.min.js"></script>
<script>
    $('#cpf').mask('000.000.000-00', { reverse: true });


</script>