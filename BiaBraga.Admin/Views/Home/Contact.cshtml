@model IEnumerable<BiaBraga.Domain.Models.Entitys.Contact>

@{
    ViewData["Title"] = "Contatos";
    DateTime minDate = DateTime.Parse(ViewData["minDate"] as string);
    DateTime maxDate = DateTime.Parse(ViewData["maxDate"] as string);
    int count = 1;
}

<h1>@ViewData["Title"]</h1>
<hr />

<form class="mt-3" asp-action="Contact" method="get">
    <div class="form-row">
        <div class="form-group col-md-4 mt-2">
            <input type="date" class="form-control" name="minDate" max="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.AddYears(-100).ToString("yyyy-MM-dd")" onchange="this.form.submit()" value=@ViewData["minDate"]>
        </div>

        <div class="form-group col-md-4 mt-2">
            <input type="date" class="form-control" name="maxDate" max="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.AddYears(-100).ToString("yyyy-MM-dd")" onchange="this.form.submit()" value=@ViewData["maxDate"]>
        </div>
    </div>
</form>

<div class="text-black font-weight-bold mb-2">
    <ul class="list-group list-group-horizontal-xl">
        <li class="list-group-item">
            Importante &nbsp;
            <span class="badge badge-light badge-pill">@ViewData["qntImportante"]</span>
        </li>
        <li class="list-group-item ">
            Novo &nbsp;
            <span class="badge badge-light badge-pill">@ViewData["qntNovo"]</span>
        </li>
        <li class="list-group-item">
            Total &nbsp;
            <span class="badge badge-light badge-pill">@ViewData["qntTotal"]</span>
        </li>
    </ul>
</div>

<div style="width:100%; max-height:500px; overflow-y:auto;">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="@count">
                    <script>
                        if ('@item.Important' === 'True' ) {
                            document.getElementById('@count').style.backgroundColor = 'rgba(128, 0, 0, 0.2)';
                        }
                        else if ('@item.New' === 'True') {
                            document.getElementById('@count').style.backgroundColor = 'rgba(0, 255, 0, 0.2)';
                        }
                    </script>

                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a onclick="selectModalContact('@item.Id', '@item.Name', '@item.Message', '@item.Email', '@item.New', '@item.Important', '@item.Date')" class="btn btn-info" data-toggle="modal" data-target="#modal-contact">
                            Abrir contato &nbsp;
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-info-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM8 5.5a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
                            </svg>
                        </a>
                    </td>
                </tr>

                count++;
            }

        </tbody>
    </table>
</div>




<div id="modal-contact" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detalhes do contato</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="m-2" id="header-contact"></div>
                <div class="m-3 border-top" id="body-contact"></div>
                <div class="m-2 border-top" id="footer-contact"></div>
            </div>
        </div>
    </div>
</div>

<script>
    function selectModalContact(id, name, message, email, newmessage, important, date) {
        var header = document.getElementById('header-contact');
        var body = document.getElementById('body-contact');
        var footer = document.getElementById('footer-contact');
        header.innerHTML = `Nome: ${name}<br/>Email: ${email}<br/>Data: ${date}`;
        body.innerHTML = message;
    }
</script>

